{
  "name": "development",
  "description": "",
  "json_class": "Chef::Environment",
  "chef_type": "environment",

  "default_attributes": {
    "nginx": {
      "sites": {
        "{{hostname}}": {
          "server_name": "{{hostname}}",
          "docroot": "/vagrant/web",
          "endpoint": "app_dev.php",
          "protocols": ["http", "https"]
        }
      }
    },

    "mysql": {
      "users": {
        "{{name}}": {
          "password": "{{name}}",
          "database_name": "{{name}}"
        }
      },
      "allow_remote_root": true
    },

    "packages": [ "git" ],

    "iptables-standard": {
      "allowed_incoming_ports": {"mysql": "mysql"}
    }
  },

  "override_attributes": {
    "data-bag-merge": {
      "environments": {
        "encrypted": false
      }
    }
  }
}
